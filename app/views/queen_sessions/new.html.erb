<% provide(:title, "Queen Sign-in") %>
<h1>Queen Sign-in</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:queen_session, url: queen_sessions_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit "Sign-in", class: "btn btn-large btn-primary" %>
    <% end %>

    <p>New queen? <%= link_to "Sign up now!", queensignup_path %></p>
  </div>
</div>