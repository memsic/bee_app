<% provide(:title, "Bee Sign-in") %>
<h1>Bee Sign-in</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:bee_session, url: bee_sessions_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit "Sign-in", class: "btn btn-large btn-primary" %>
    <% end %>

    <p>New bee? <%= link_to "Sign up now!", beesignup_path %></p>
  </div>
</div>